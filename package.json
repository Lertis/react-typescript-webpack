{
	"name": "react-with-typescript",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@babel/plugin-transform-flow-strip-types": "7.12.1",
		"@babel/preset-env": "7.12.7",
		"@babel/preset-react": "7.12.7",
		"@babel/preset-typescript": "^7.12.7",
		"@material-ui/core": "4.11.0",
		"@material-ui/icons": "4.9.1",
		"@testing-library/jest-dom": "^5.11.6",
		"@testing-library/react": "^11.2.2",
		"@testing-library/user-event": "12.2.2",
		"@types/enzyme": "^3.10.8",
		"@types/enzyme-adapter-react-16": "^1.0.6",
		"@types/jest": "^26.0.15",
		"@types/lodash": "4.14.165",
		"@types/node": "12.19.6",
		"@types/react": "16.14.2",
		"@types/react-dom": "16.9.10",
		"@types/react-test-renderer": "17.0.0",
		"@types/sinon": "^9.0.9",
		"awesome-typescript-loader": "5.2.1",
		"axios": "0.21.0",
		"babel-jest": "26.6.3",
		"css-loader": "1.0.0",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.5",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.1.4",
		"file-loader": "6.2.0",
		"html-webpack-plugin": "4.5.0",
		"jest": "^26.1.0",
		"lodash": "4.17.20",
		"prettier": "^2.2.0",
		"react": "17.0.1",
		"react-dom": "17.0.1",
		"react-scripts": "4.0.1",
		"react-test-renderer": "^17.0.1",
		"rxjs": "^6.6.3",
		"semantic-ui-css": "^2.4.1",
		"sinon": "^9.2.1",
		"style-loader": "0.23.0",
		"ts-jest": "^26.4.4",
		"typescript": "4.1.2",
		"web-vitals": "0.2.4",
		"webpack": "4.20.2",
		"webpack-cli": "3.1.1",
		"webpack-dev-server": "3.1.14"
	},
	"scripts": {
		"start": "webpack-dev-server --mode development --open --hot",
		"build": "webpack --mode production",
		"test": "react-scripts test",
		"test-j": "jest",
		"test-j-changed": "jest --onlyChanged",
		"test-j-coverage": "jest --coverage",
		"test-j-coverage-changed": "jest --coverage --onlyChanged",
		"test-j-snapshots": "jest -- -u",
		"test-j-clear-cache": "jest --clearCache",
		"lint-staged": "lint-staged --relative --config .lintstagedrc.js",
		"format": "prettier --write \"**/*.+(js|tsx|json|css)\"",
		"pre-commit-script": "npm run lint-staged & npm run format"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run pre-commit-script"
		}
	},
	"lint-staged": {
		"*.+(js|jsx)": [
			"eslint --fix",
			"git add"
		],
		"*.+(json|css|md)": [
			"prettier --write",
			"git add"
		]
	},
	"prettier": {
		"printWidth": 120,
		"trailingComma": "all",
		"tabWidth": 2,
		"semi": true,
		"singleQuote": false,
		"useTabs": true
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
